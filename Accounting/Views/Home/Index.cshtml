@model AccountingDetailViewModel

<div class="well" style="margin-top: 60px;">
    @using (Ajax.BeginForm("Create", "Home", null, new AjaxOptions {
        UpdateTargetId = "AccountingDetail",
        Url = Url.Action("CreateForAjax")
    }, new { @class = "form-horizontal" })) {
        <div class="form-group">
            @Html.LabelFor(m => m.Category, new { @for = "category", @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(a => a.Category, "請選擇", new { @class = "form-control", id = "category" })
                @Html.ValidationMessageFor(m => m.Category)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Price, new { @for = "money", @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.Price, null, new { @class = "form-control", id = "money", placeholder = "金額" })
                @Html.ValidationMessageFor(m => m.Price)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date, new { @for = "date", @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(a => a.Date, null, new { @class = "form-control", id = "date", placeholder = "日期" })
                @Html.ValidationMessageFor(m => m.Date)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @for = "description", @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", id = "description" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>
@Html.Action("AccountingDetail")


