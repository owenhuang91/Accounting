@model IPagedList<Accounting.Models.ViewModels.AccountingDetailViewModel>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>@Html.DisplayNameFor(m => m.FirstOrDefault().No)</th>
                <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Type)</th>
                <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Date)</th>
                <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Price)</th>
            </tr>

            @foreach (var accountingDetail in Model) {
                <tr>
                    <td>@accountingDetail.No</td>
                    <td>@accountingDetail.Type</td>
                    <td>@accountingDetail.Date</td>
                    <td>@accountingDetail.Price</td>
                </tr>
            }

        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>